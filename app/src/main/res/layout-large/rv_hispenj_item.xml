<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2.5dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/border_cardview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KdBrg"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_kdbrg_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="A001M"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NmBrg"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_nmbrg_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KIKKOMAN SHOYU BOTOL 1L"
                    android:textSize="12dip"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="14dip"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tv_harga_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="1.000.000,00"
                    android:textSize="14dip"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_diskon1_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disc1"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:letterSpacing="0.04"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_diskon1_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.04"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_diskon2_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disc2"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:letterSpacing="0.04"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_diskon2_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.04"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_diskon3_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disc3"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:letterSpacing="0.04"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_diskon3_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.04"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_discfak_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disc Fak"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:letterSpacing="0.04"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_discfak_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.04"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>