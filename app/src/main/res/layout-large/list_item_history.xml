<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/line_hispenj_nofak"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nofaktur_item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14dip"
            android:textColor="@android:color/holo_green_dark"/>

        <TextView
            android:id="@+id/tv_nopo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/tv_tgl_item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="14dip"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/line1"
        android:background="@color/colorAccent"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line1"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_cetak"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/cetak1"/>

            <TextView
                android:id="@+id/tv_cetak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invoice dicetak"
                android:gravity="center"
                android:textSize="10dp"
                android:letterSpacing="0.04"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_penyiapan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/penyiapan0"/>

            <TextView
                android:id="@+id/tv_penyiapan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barang disiapkan"
                android:gravity="center"
                android:textSize="10dp"
                android:letterSpacing="0.04"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_kirim"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/kirim0"/>

            <TextView
                android:id="@+id/tv_kirim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proses kirim"
                android:gravity="center"
                android:textSize="10dp"
                android:letterSpacing="0.04"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_terima"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/diterima0"/>

            <TextView
                android:id="@+id/tv_terima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barang diterima"
                android:gravity="center"
                android:textSize="10dp"
                android:letterSpacing="0.04"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_kembali"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/dokumen0"/>

            <TextView
                android:id="@+id/tv_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dokumen kembali"
                android:gravity="right|center_vertical"
                android:textSize="10dp"
                android:letterSpacing="0.04"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/line2">

        <TextView
            android:id="@+id/tv_kdbrg_item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_nmbrg_item"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dip"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tv_qty"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_harga_item"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_below="@+id/line3">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_diskon1_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disc1"
                android:gravity="center"
                android:textSize="12dp"
                android:letterSpacing="0.04"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_diskon1_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.04"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_diskon2_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disc2"
                android:gravity="center"
                android:textSize="12dp"
                android:letterSpacing="0.04"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_diskon2_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.04"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_diskon3_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disc3"
                android:gravity="center"
                android:textSize="12dp"
                android:letterSpacing="0.04"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_diskon3_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.04"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_discfak_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disc Fak"
                android:gravity="center"
                android:textSize="12dp"
                android:letterSpacing="0.04"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_discfak_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.04"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>